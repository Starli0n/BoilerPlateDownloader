{
    "name": "starli0n/boilerplatedownloader",
    "description": "Download file to a boiler plate server",
    "keywords": ["slim", "microframework", "rest", "router", "psr7"],
    "homepage": "https://github.com/Starli0n/BoilerPlateDownloader#readme",
    "license": "MIT",
    "authors": [
        {
            "name": "Starli0n",
            "email": "Starli0n@users.noreply.github.com",
            "homepage": "https://github.com/Starli0n"
        }
    ],
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/Starli0n/slim-test-helpers"
        },
        {
            "type": "vcs",
            "url": "https://github.com/Starli0n/slim"
        }
    ],
    "require": {
        "php": ">=5.5.0",
        "slim/slim": "3.x-dev",
        "slim/php-view": "^2.0",
        "monolog/monolog": "^1.17"
    },
    "autoload": {
        "psr-4": {"BoilerPlateDownloader\\": "src/"}
    },
    "autoload-dev": {
        "psr-4": {"BoilerPlateDownloader\\Test\\": "test/src/"}
    },
    "require-dev": {
        "phpunit/phpunit": "^5.5",
        "satooshi/php-coveralls": "^1.0",
        "there4/slim-test-helpers": "dev-master",
        "squizlabs/php_codesniffer": "^2.7",
        "phpmd/phpmd": "^2.4",
        "pdepend/pdepend": "^2.2",
        "phploc/phploc": "^3.0",
        "sebastian/phpcpd": "^2.0"
    },
    "scripts": {
        "build": "composer install --prefer-dist --optimize-autoloader --no-interaction --no-dev",
        "build-dev": "composer install --prefer-dist --optimize-autoloader --no-interaction",
        "test": "php vendor/phpunit/phpunit/phpunit --verbose --configuration=./test/phpunit.xml --coverage-text --coverage-html=./report --coverage-clover=./report/clover.xml --bootstrap=./test/bootstrap.php",
        "cover": "php vendor/satooshi/php-coveralls/bin/coveralls --config ./test/.coveralls.yml",
        "debug": "php test/debug.php",
        "sniff": "php vendor/squizlabs/php_codesniffer/scripts/phpcs --standard=PSR2 --extensions=php public/api src test",
        "fix": "php vendor/squizlabs/php_codesniffer/scripts/phpcbf --no-patch --standard=PSR2 --extensions=php public/api src test",
        "md": "php vendor/phpmd/phpmd/src/bin/phpmd public/api,src,test text cleancode,codesize,controversial,design,naming,unusedcode",
        "md_html": "php vendor/phpmd/phpmd/src/bin/phpmd public/api,src,test html cleancode,codesize,controversial,design,naming,unusedcode --reportfile report/phpmd.html",
        "dp": "php vendor/pdepend/pdepend/src/bin/pdepend --dependency-xml=report/dependency.xml --summary-xml=report/summary.xml --jdepend-chart=report/jdepend.svg --overview-pyramid=report/pyramid.svg public/api,src,test",
        "loc": "php vendor/phploc/phploc/phploc public/api src",
        "cpd": "php vendor/sebastian/phpcpd/phpcpd public/api src test"
    }
}
